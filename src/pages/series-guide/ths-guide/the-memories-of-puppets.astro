---
import TextLayout from "@/layouts/TextLayout.astro"
import '@/styles/text.css'
---

<TextLayout>
</TextLayout>
<title>More Information</title>
<style>
    @media screen and (orientation: landscape) {
        .container {
display: grid;
grid-template-areas:
    "content content"
    "menu menu"
    "footer footer";

grid-template-columns: 1fr 2fr;
margin: 0px auto;
margin-bottom: 3%;
gap: 2.5%;;
}
    }

    @media screen and (orientation: portrait) {
.container {
display: grid;
grid-template-areas:
    "content content"
    "menu menu"
    "footer footer";

grid-template-columns: 1fr 1fr;
margin: 0px auto;
margin-top: 3%;
margin-bottom: 3%;
gap: 2.5%;;
}
    }
    #icon{
display:inline-block;
    }
.title{
    margin-bottom: 0.1cm;
    font-size: 150%;

}
.para{
    font-size: 65%;
}
#top-right{
    font-size: 110%;
    margin-top: 0%;
}
.container > div {

}
.container > div.menu {
grid-area: menu;
}
.container > div.content {
  grid-area: content;
}
.container > div.footer {
  grid-area: footer;
}
</style>

---
import TextLayout from "@/layouts/TextLayout.astro"
import '@/styles/text.css'
---

<TextLayout>
</TextLayout>
<title>Rion's Character Stories</title>
<style>
    @media screen and (orientation: landscape) {
.container {  display: grid;
  grid-template-columns: 0.9fr 1fr 1.1fr;
  grid-template-rows: 1.5fr 2fr;
  gap: 0px 0px;
  grid-auto-flow: row;
  margin: 0 auto;
}

.menu { grid-area: 1 / 1 / 3 / 3; }

.content {  display: grid;
  grid-template-columns: 1fr 1fr 1fr 1fr;
  grid-template-rows: 0.4fr 1.6fr 1fr;
  gap: 0px 0px;
  grid-auto-flow: row;
  grid-template-areas:
    "hp atk def agi"
    "photo photo photo photo"
    "photo photo photo photo";
  grid-area: 1 / 3 / 3 / 4;
}

.hp { grid-area: hp; }

.atk { grid-area: atk; }

.def { grid-area: def; }

.agi { grid-area: agi; }

.photo { grid-area: photo; }

.ability {  display: grid;
  grid-template-columns: 2.2fr;
  grid-template-rows: 0.5fr 1.5fr;
  gap: 0px 0px;
  grid-auto-flow: row;
  grid-template-areas:
    "title-ab"
    "text-ab";
  grid-area: 1 / 2 / 2 / 3;
}

.text-ab { grid-area: text-ab; }

.title-ab { grid-area: title-ab; }

.skill {  display: grid;
  grid-template-columns: 1.3fr;
  grid-template-rows: 0.5fr 1.5fr;
  gap: 0px 0px;
  grid-auto-flow: row;
  grid-template-areas:
    "title-s"
    "text-s";
  grid-area: 1 / 1 / 2 / 2;
}

.title-s { grid-area: title-s; }

.text-s { grid-area: text-s; }

.debris {  display: grid;
  grid-template-columns: 1.7fr;
  grid-template-rows: 1fr 1fr 1fr 1fr;
  gap: 0px 0px;
  grid-auto-flow: row;
  grid-template-areas:
    "title-d"
    "text-d"
    "text-d"
    "text-d";
  grid-area: 2 / 2 / 3 / 3;
}

.title-d { grid-area: title-d; }

.text-d { grid-area: text-d; }

.awakening {  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  grid-template-rows: 0.5fr 1.5fr;
  gap: 0px 0px;
  grid-auto-flow: row;
  grid-template-areas:
    "title-aw title-aw title-aw"
    "text-aw text-aw text-aw";
  grid-area: 2 / 1 / 3 / 2;
}

.title-aw { grid-area: title-aw; }

.text-aw { grid-area: text-aw; }


    }

